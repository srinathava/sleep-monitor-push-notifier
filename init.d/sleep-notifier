#!/bin/sh

### BEGIN INIT INFO
# Provides:          sleep-monitor-push-notifier
# Required-Start:    $all
# Required-Stop:     
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Sleep Monitor Push Notifier
# Description:       Baby Sleep Monitor Push Notifier
### END INIT INFO

. /lib/lsb/init-functions

SCRIPT=`realpath $0`
SCRIPT_DIR=`dirname $SCRIPT`
INSTALL_DIR=`realpath ${SCRIPT_DIR}/..`

test -f ${INSTALL_DIR}/index.js || exit 0

start() {
    log_daemon_msg "Starting Sleep Monitor Notification server" "sleepmonitor-notifier"
    start-stop-daemon --start --quiet --oknodo \
        --chdir ${INSTALL_DIR} \
        --exec `which nodejs` \
        --background --make-pidfile \
        --pidfile /var/run/sleepmonitor-notifier.pid \
        -- index.js
    log_end_msg $?
}

stop() {
    log_daemon_msg "Stopping Sleep Monitor Notification server" "sleepmonitor-notifier"
    start-stop-daemon --stop --quiet --oknodo \
        --pidfile /var/run/sleepmonitor-notifier.pid \
        --remove-pidfile \
        --retry=TERM/30/KILL/5
    log_end_msg $?
}

case "$1" in
    start)
        start;
        ;;
    stop)
        stop;
        ;;
    reload|force-reload)
        log_action_msg "Nothing to do"
        ;;
    restart)
        stop;
        start;
        ;;
    status)
        log_action_msg "Not implemented yet"
        ;;

    *)
        log_action_msg "Usage: $0 {start|stop|reload|force-reload|restart|try-restart|status}" || true
        exit 1
esac
